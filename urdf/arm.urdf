<robot name="simple_robotic_arm">
  <!-- Base link -->
  <link name="base_link"/>
  
  <!-- First link -->
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.3 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </visual>
  </link>
  
  <!-- Second link -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.3 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </visual>
  </link>
  
  <!-- Joint between base and link1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>
  
  <!-- Joint between link1 and link2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.6"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>
</robot>
